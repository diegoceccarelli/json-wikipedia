     {"name": "images", "type": { "type" : "array", "items": "Link"}, "default": []},
     {"name": "type", "type":"ArticleType"},
     {"name": "tables", "type": { "type" : "array", "items":"Table" }, "default": []},
     {"name": "lists", "type": { "type" : "array",
                                 "items": { "type": "array",
                                            "items" : {
                                               "type": "string"
                                             }
                                          }
                                      },
                               "default": []},
