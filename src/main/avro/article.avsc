     {"name": "wid",  "type": "int"},
     {"name": "integerNamespace",  "type": "int"},
     {"name": "lang", "type": "Language"},
     {"name": "namespace", "type": "string"},
     {"name": "timestamp", "type": "string"},
     {"name": "enWikiTitle", "type": ["null", "string"], "default":null},
     {"name": "redirect", "type": ["null", "string"], "default":null },
     {"name": "paragraphs", "type": { "type" : "array", "items": { "type": "string" }}, "default": []},
     {"name": "sections", "type": { "type" : "array", "items": { "type": "string" }}, "default": []},
     {"name": "highlights", "type": { "type" : "array", "items": { "type": "string" }}, "default": []},
     {"name": "templatesSchema", "type": { "type" : "array", "items": { "type": "string" }}, "default": []},

     {"name": "links", "type": { "type" : "array", "items": "Link"}, "default": []},
