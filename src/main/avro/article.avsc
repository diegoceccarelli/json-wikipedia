{"namespace": "it.cnr.isti.hpc.wikipedia.article",
 "type": "record",
 "name": "Link",
                 "fields": [
                     {"name": "id", "type": "string"},
                     {"name": "anchor",  "type": "string"},
                     {"name": "start", "type": "int", "doc": "where the anchor starts in the text"},
                     {"name": "end", "type": "int", "doc": "where the anchor ends in the text" },
                     {"name": "paragraphId", "type": ["null", "int"], "default": null, "doc": "if it occurs in a paragraph, the item in the list"},
                     {"name": "listId", "type": ["null", "int"], "default": null, "doc": " if it occurs in a list, the ordinal of the list among all the lists"},
                     {"name": "listItem","type": ["null", "int"], "default":null, "doc": "if it occurs in a  list, the item in the list"},
                     {"name": "tableId", "type": ["null", "int"], "default": null,  "doc": "if it occurs in a table, the ordinal of the table among all the tables"},
                     {"name": "rowId", "type": ["null", "int"], "default": null, "doc": "if it occurs in a table, the ordinal of the row"},
                     {"name": "columnId", "type": ["null", "int"], "default": null, "doc": "if it occurs in a table, the ordinal of the column"},
                     {"name": "type", "type": "LinkType"}
                 ]
},
{"namespace": "it.cnr.isti.hpc.wikipedia.article",
 "type": "record",
